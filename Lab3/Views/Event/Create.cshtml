@model Lab3.Models.EventCreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Event</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Create", "Event"))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                @Html.LabelFor(model => model.Title)
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Title)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Agenda)
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Agenda)
                </div>
            </div>

            <div class="form-group">
                <label>Location</label>
                <div class="col-md-10">
                    @Html.DropDownList("LocationId", (IEnumerable<SelectListItem>)ViewBag.Location, "Select Location", null)
                </div>
            </div>

            <div class="form-group">
                <label>Technology | @Html.ActionLink("Create New", "Create", "Technology", new { redirectUrl = Url.Action("Create", "Event") })</label>
                <div class="col-md-10">
                    @Html.ListBox("TechnologiesIds", (MultiSelectList)ViewBag.Technologies)
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        }
    </div>
</div>
